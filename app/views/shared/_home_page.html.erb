<% object.each do |obj| %>
	<div class="box panel panel-default">
		<%= link_to (image_tag obj.image.url(:medium)), obj %>
		<h2>
			<%= link_to obj.title, obj %>
		</h2>
		<div class="panel-body">
			<p><%= truncate(obj.description, length: 300, separator: ' ') %></p>
			<p>Runtime: <strong><%= pluralize(obj.runtime, 'minute' )%></strong></p>
		</div>
	</div>
<% end %>